{
  "singleQuote": true,
  "trailingComma": "es5",
  "tabWidth": 2,
  "overrides": [
    {
      "files": "*.mjml",
      "options": {
        "htmlWhitespaceSensitivity": "ignore"
      }
    },
    {
      "files": "*.md",
      "options": {
        "proseWrap": "always"
      }
    },
    {
      "files": [".prettierrc", ".releaserc", ".eslintrc", ".commitlintrc"],
      "options": { "parser": "json" }
    }
  ]
}
